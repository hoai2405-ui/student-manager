// 1. Cß║Ñu h├¼nh n╞íi l╞░u file (Hß╗ù trß╗ú cß║ú PDF v├á Video)
const storage = multer.diskStorage({
  destination: function (req, file, cb) {
    // Tß║ío folder chung 'uploads/files' cho gß╗ìn
    const dir = "./uploads/files";
    if (!fs.existsSync(dir)) fs.mkdirSync(dir, { recursive: true });
    cb(null, dir);
  },
  filename: function (req, file, cb) {
    // Giß╗» nguy├¬n t├¬n file nh╞░ng th├¬m timestamp ─æß╗â kh├┤ng tr├╣ng
    // D├╣ng Buffer ─æß╗â giß╗» t├¬n tiß║┐ng Viß╗çt kh├┤ng bß╗ï lß╗ùi font
    const originalName = Buffer.from(file.originalname, "latin1").toString(
      "utf8"
    );
    cb(null, Date.now() + "-" + originalName.replace(/\s+/g, "_") );
  },
});

// 2. Bß╗Ö lß╗ìc file (Cho ph├⌐p PDF v├á Video)
const fileFilter = (req, file, cb) => {
  if (
    file.mimetype === "application/pdf" ||
    file.mimetype.startsWith("video/") // Chß║Ñp nhß║¡n mß╗ìi loß║íi video (mp4, webm...)
  ) {
    cb(null, true);
  } else {
    cb(new Error("Chß╗ë cho ph├⌐p upload PDF hoß║╖c Video!"), false);
  }
};

// 3. Khß╗ƒi tß║ío Upload (T─âng giß╗¢i hß║ín l├¬n 100MB cho video)
const uploadFile = multer({
  storage: storage,
  fileFilter: fileFilter,
  limits: { fileSize: 100 * 1024 * 1024 }, // 100MB
});

// 4. API Upload chung (Thay thß║┐ API upload c┼⌐)
app.post("/api/upload/file", uploadFile.single("file"), (req, res) => {
