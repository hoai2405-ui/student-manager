      .status(400)
      .json({ message: "Lß╗ùi upload hoß║╖c file kh├┤ng hß╗úp lß╗ç" });
  }
  // Trß║ú vß╗ü ─æ╞░ß╗¥ng dß║½n file
  const fileUrl = `/uploads/files/${req.file.filename}`;
  // Trß║ú vß╗ü th├¬m loß║íi file ─æß╗â Frontend biß║┐t ─æ╞░ß╗¥ng xß╗¡ l├╜
  const fileType = req.file.mimetype.startsWith("video/") ? "video" : "pdf";

  res.json({ url: fileUrl, type: fileType });
});

