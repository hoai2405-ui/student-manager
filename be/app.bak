                        "Convert xong nh╞░ng kh├┤ng thß║Ñy file output jpg"
                      );
                    }
                  } catch (exeErr) {
                    console.error(`Γ¥î Lß╗ùi chß║íy ImageMagick: ${exeErr.message}`);
                    // Fallback: L╞░u ß║únh gß╗æc (d├╣ kh├┤ng hiß╗çn nh╞░ng kh├┤ng mß║Ñt dß╗» liß╗çu)
                    anhFinal = `data:image/jp2;base64,${cleanString}`;
                  } finally {
                    // Dß╗ìn r├íc
                    if (fs.existsSync(inputPath)) fs.unlinkSync(inputPath);
                    if (fs.existsSync(outputPath)) fs.unlinkSync(outputPath);
                  }
                } else {
                  // --- ß║ónh th╞░ß╗¥ng (JPG/PNG) ---
                  const jpegBuffer = await sharp(imageBuffer)
                    .toFormat("jpeg")
                    .jpeg({ quality: 90 })
                    .toBuffer();
                  anhFinal = `data:image/jpeg;base64,${jpegBuffer.toString(
                    "base64"
                  )}`;
                  console.log(`Γ£à Sharp convert th├ánh c├┤ng!`);
                }
              } catch (convertErr) {
                console.error(`Γ¥î Lß╗ùi xß╗¡ l├╜ ß║únh chung: ${convertErr.message}`);
                anhFinal = rawAnh; // L╞░u tß║ím c├íi c┼⌐
              }
            } else {
              console.log(`Γ¥î KH├öNG C├ô Dß╗« LIß╗åU ß║óNH`);
            }

            // 2. Lß║ñY C├üC TH├öNG TIN KH├üC (H├ám hß╗ù trß╗ú lß║Ñy text ngß║»n)
            const getText = (node) => {
              if (!node) return "";
              if (Array.isArray(node)) return getText(node[0]);
              if (typeof node === "object") return node._ || "";
              return String(node).trim();
            };

            const ngaySinh = getText(hocvien.NGAY_SINH);
            const hangGplx =
              getText(hocvien.HANG_GPLX) || getText(khoa.HANG_GPLX) || "";
            const soCmt = getText(hocvien.SO_CMT) || "";

            // 3. L╞»U V├ÇO DB
            try {
              const [result] = await conn.query(sqlstudent, [
                studentName,
                ngaySinh,
                hangGplx,
                soCmt,
                getText(khoa.MA_KHOA_HOC) || "",
                "chua thi",
                anhFinal, // Truyß╗ün ß║únh v├áo
              ]);
              console.log(`≡ƒÆ╛ Saved ID: ${result.insertId}`);
            } catch (insertErr) {
              console.error(`Γ¥î Lß╗ùi Insert DB:`, insertErr.message);
              // Nß║┐u lß╗ùi do g├│i tin qu├í lß╗¢n
              if (
                insertErr.message.includes("packet") ||
                insertErr.message.includes("large")
              ) {
                console.log(
                  "ΓÜá∩╕Å  Lß╗ûI: ß║ónh qu├í lß╗¢n so vß╗¢i cß║Ñu h├¼nh MySQL (max_allowed_packet)."
                );
                console.log(
                  "≡ƒæë Bß║ín cß║ºn chß║íy lß╗çnh SQL: SET GLOBAL max_allowed_packet = 1073741824;"
                );
              }
            }
          }
          await conn.commit();
          console.log(
            `\nΓ£à Ho├án th├ánh! ─É├ú th├¬m ${hocvienList.length} hß╗ìc vi├¬n v├áo database.\n`
          );
          res.json({ success: true });
        } catch (err) {
          if (conn) await conn.rollback();
          // MySQL duplicate entry error code: 'ER_DUP_ENTRY'
          if (err.code === "ER_DUP_ENTRY") {
            return res
              .status(409)
              .json({ message: "Kh├│a hß╗ìc hoß║╖c hß╗ìc vi├¬n ─æ├ú tß╗ôn tß║íi!" });
          }
          return res.status(500).json({ message: "Lß╗ùi DB", err });
        } finally {
          if (conn) conn.release();
        }
      } catch (e) {
        res.status(400).json({ message: "Sai cß║Ñu tr├║c XML", error: e });
      }
    });
